{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-build",
            "label": "docker-build",
            "platform": "node",
            "dockerBuild": {
                "dockerfile": "${workspaceFolder}/nvest-server/Dockerfile",
                "context": "${workspaceFolder}/nvest-server",
                "pull": true
            },
            "node": {
                "package": "${workspaceFolder}/nvest-server/package.json"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: release",
            "dependsOn": ["docker-build"],
            "platform": "node",
            "node": {
                "package": "${workspaceFolder}/nvest-server/package.json"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": ["docker-build"],
            "dockerRun": {
                "env": {
                    "DEBUG": "*",
                    "NODE_ENV": "development"
                },
                "ports": [
                    {
                        "containerPort": 5000,
                        "hostPort": 5000
                    }
                ]
            },
            "node": {
                "package": "${workspaceFolder}/nvest-server/package.json",
                "enableDebugging": true
            }
        }
    ]
}
